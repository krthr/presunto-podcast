      <p>
        {{{ episode.highlight?.transcription.snippet }}}
      </p>
      @end  --}}

      {{--  <p class="text-ellipsis line-clamp-3">
        {{{ markdown(episode.document.summary) }}}
      </p>  --}}
    </div>
  </div>
  @end
</div>

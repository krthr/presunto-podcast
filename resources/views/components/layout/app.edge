<!DOCTYPE html lang="es">
<html data-theme="cupcake">
  <head>
    <meta charset="utf-8" />
    <title>
      {{ title || "Presunta Búsqueda" }}
    </title>
    @if ($slots.meta)
      {{{ await $slots.meta() }}}
    @endif
    
    @vite(['resources/css/app.css', 'resources/js/app.ts'])

    <script 
      defer 
      src="https://analytics.krthr.co/script.js" 
      data-domains="presunto.krthr.co" 
      data-website-id="baea1006-3d91-475d-babd-d8eabe22d790"
    ></script>

    @if(session.get('q'))
    <script>
      window.addEventListener('DOMContentLoaded', () => {
        window.umami.track('search', {q: "{{ session.get('q') }}"})
      })
    </script>
    @end

  </head>
  <body>
    <div class="w-full">
      <div class="m-auto max-w-7xl py-10 px-2 sm:px-0">
        <div class="navbar items-center mb-10 flex-wrap flex">
          <div class="flex-none">
            <h1 class="font-bold text-xl py-4 mr-6">
              <a href="/">Presunta Búsqueda</a>
            </h1>
          </div>
          <div class="flex-1"></div>
          <div class="flex-none gap-2">
            <form action="/search" method="GET" class="mb-0">
              <label class="input input-bordered flex items-center gap-2 md:w-auto">
                <input name="q" type="text" placeholder="Buscar..." class="grow min-w-[200px]" value="{{ session.get('q', '') }}" />
                @if(session.get('q'))
                <a href="/">
                  <iconify-icon icon="ph:x" height="25"></iconify-icon>
                </a>
                @end
                <button class="" type="submit">
                  <iconify-icon icon="ph:magnifying-glass" height="25"></iconify-icon>
                </button>
              </label>
            </form>
          </div>
        </div>

        {{{ await $slots.main() }}}
      </div>
    </div>
  </body>
</html>

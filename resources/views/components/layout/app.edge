<!DOCTYPE html>
<html data-theme="cupcake" lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>
      {{ title || "Presunta Búsqueda" }}
    </title>
    @if ($slots.meta)
      {{{ await $slots.meta() }}}
    @endif
    
    @vite(['resources/css/app.css', 'resources/js/app.ts'])

    <script
      defer
      src="https://analytics.krthr.co/script.js"
      data-domains="presunto.krthr.co"
      data-website-id="baea1006-3d91-475d-babd-d8eabe22d790"
    ></script>

    @if(session.get('q'))
      <script>
      window.addEventListener('DOMContentLoaded', () => {
        window.umami.track('search', {q: "{{ session.get('q') }}"})
      })
      </script>
    @end
    
  </head>

  <body class="min-h-screen">
    <div class="w-full h-full">
      <div class="{{
        html.classNames(
          ['m-auto max-w-4xl py-10 px-2 h-full min-h-full flex-col flex justify-center'],
          {
            'min-h-screen': route() === '/'
          }
        )
      }}">
        {{{ await $slots.main() }}}
        
        <footer class="mt-10 text-center">
          <p class="text-sm">
            {{--  <span>Puedes ver código de esta página web <a target="_blank" class="underline decoration-wavy" href="https://github.com/krthr/presunto-podcast">aquí</a>.</span>  --}}

            {{--  <br>  --}}

            <span class="inline-flex items-center">
              <span>Hecho con</span>
              <iconify-icon class="text-red-500 mx-2" icon="ph:heart-fill" height="">
              </iconify-icon>
              <span>por</span>
              <a
                target="_blank"
                class="underline decoration-wavy ml-2"
                href="https://instagram.com/wilson__tovar"
